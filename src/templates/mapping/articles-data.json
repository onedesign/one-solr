[
  {% for entry in craft.entries.section('articlesData').id(id).limit(limit).offset(offset).locale(locale) %}
  {
    "id": "{{ entry.id ~ "-" ~ entry.locale }}",
    "locale_s": "{{ entry.locale }}",
    "section_id_i": {{ entry.sectionId | raw }},
  "entry_id_i": {{ entry.id }},
  "article_type_i": 3,
  "title": {{ entry.title | json_encode() | raw }},
  "url": {{ entry.url | json_encode() | raw }},
  "post_date_dt": "{{ entry.postDate | date('Y-m-d\\TH:i:s\\Z') }}",
  "content": {% set catText = '' %}

  {% if entry.featureImageText | length %}
  {% set catText = catText ~ entry.featureImageText %}
  {% endif %}

  {% if entry.introBlurb | length %}
  {% set catText = catText ~ entry.introBlurb %}
  {% endif %}

  {% for matrixBlock in entry.contentBody %}

  {% if matrixBlock.type == 'text' or matrixBlock.type == 'stat' %}

  {% set catText = catText ~ matrixBlock.text %}

  {% elseif matrixBlock.type == 'pullQuote' %}

  {% set catText = catText ~ matrixBlock.quote ~ matrixBlock.source %}

  {% elseif matrixBlock.type == 'video' %}

  {% set catText = catText ~ matrixBlock.caption %}

  {% elseif matrixBlock.type == 'heading' %}

  {% set catText = catText ~ matrixBlock.heading %}

  {% elseif matrixBlock.type == 'image' %}

  {% if matrixBlock.searchDescription | length %}
  {% set catText = catText ~ matrixBlock.searchDescription %}
  {% endif %}

  {% if matrixBlock.caption | length %}
  {% set catText = catText ~ matrixBlock.caption %}
  {% endif %}

  {% elseif matrixBlock.type == 'chart' %}

  {% set chart = matrixBlock.chart.first() %}
  {% set chartText = '' %}

  {% if chart | length %}
  {% if chart.question | length %}
  {% set chartText = chartText ~ chart.question %}
  {% endif %}

  {% if chart.base | length %}
  {% set chartText = chartText ~ chart.base %}
  {% endif %}

  {% if chart.summary | length %}
  {% set chartText = chartText ~ chart.summary %}
  {% endif %}

  {% if chart.chartAppendix.rows is defined %}

  {% for row in chart.chartAppendix.rows %}
  {% for cell in row %}
  {% if loop.first %}
  {% set chartText = chartText ~ ' ' ~ cell %}
  {% endif %}
  {% endfor %}
  {% if not loop.last %}
  {% set chartText = chartText ~ ' | ' %}
  {% endif %}
  {% endfor %}
  {% endif %}

  {% if chart.imageList.rows is defined %}
  {% for row in chart.imageList.rows %}
  {% for cell in row %}
  {% if loop.first %}
  {% set chartText = chartText ~ ' ' ~ cell %}
  {% endif %}
  {% endfor %}
  {% if not loop.last %}
  {% set chartText = chartText ~ ' | ' %}
  {% endif %}
  {% endfor %}

  {% endif %}
  {% else %}
  {% set chartText = '' %}
  {% endif %}

  {% set catText = catText ~ chartText ~ "\n" %}

  {% elseif matrixBlock.type == 'carousel' %}

  {% set carousel = matrixBlock.carousel.first() %}

  {% if matrixBlock.showTitle and carousel.title | length %}

  {% set catText = catText ~ "\n" ~ carousel.title ~ "\n" %}

  {% endif %}

  {% if carousel.subtitle | length %}

  {% set catText = catText ~ carousel.subtitle %}

  {% endif %}

  {% for mb in carousel.carousel %}

  {% if mb.caption | length %}

  {% set catText = catText ~ mb.caption %}

  {% endif %}

  {% endfor %}

  {% endif %}
  {% endfor %}
  {{ catText | striptags| json_encode() | raw }},
  "keywords": {{ catText | striptags| json_encode() | raw }},
  "last_modified": "{{ entry.postDate.date|date('Y-m-d') ~ "T" ~ entry.postDate.date|date('H:i:s') ~ "Z" }}",
  "tags_ss": [
  {% for tag in entry.cTags.level(2) %}
  "{{ tag.title | raw }}"{% if not loop.last %},{% endif %}
  {% endfor %}
]

}{% if not loop.last %},{% endif %}
  {% endfor %}
]